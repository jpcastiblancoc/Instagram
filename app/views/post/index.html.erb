<div class="relative  h-full padre">
  <div class="border-b py-3 sticky top-0 bg-white z-50 padre first fixed">
  <%= render partial: "layouts/menu" %>
  </div>
  <div class="page-content pt-6 h-full ">
    <div class="container mx-auto flex h-full" data-reflex-root="[likes]" likes>
      <div class="left w-8/12 pr-4">
        <div id="timeline" >
          <% if @posts.count > 2 && current_user.profile.cont_profile > 2 %>
            <%= render partial: "post", collection: @posts %>
          <%else %>
            <%= render partial: "profile", collection: current_user.profile.to_follows %>
          <%end %>
        </div>
      </div>
      <div class="right w-4/12 h-screen overflow-visible h-full ">
        <div class="first fixed pl-4 w-full" style="top:85px;  max-width: 293px;">
          <div class="profile flex items-center p-3 mb-4">
            <div class="avatar rounded-full overflow-hidden mr-3 ">
              <% if current_user.profile.avatar.attached? %>
                <%= image_tag  current_user.profile.avatar, width: "70px" %>
              <%end %>
            </div>
            <div class="user-name ">
              <%=link_to current_user.profile.user_name, controller: 'profile', action:'show', id: current_user.profile.id, class:"text-lg font-semibold text-gray-700"%>
              <span class="text-sm text-gray-600  block"><%=current_user.profile.name%></span>
            </div>
          </div>
          <% if @posts.count > 2 && current_user.profile.cont_profile > 2 %>
            <div class="suggestion-users">
              <div class="title flex w-full justify-between text-sm">
                <div class="left">
                  <h1 class="font-bold">Sugerencias para ti</h1>
                </div>
                <div class="right">
                  <span>Ver todo</span>
                </div>
              </div>
              <div id="timeline"  >
                <%= render partial: "profile", collection: current_user.profile.to_follows.last(8) %>
              </div>
            </div>
          <%end %>
        </div>
      </div>
    </div>
  </div>
</div>


