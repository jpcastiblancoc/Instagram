<div class="feeds" >
  <div class="feed-wrapper mb-4">
    <div class="feed-item border border-gray-400 rounded bg-white">
      <div class="header border-b p-4 flex justify-between items-center">
        <div class="left flex flex-row items-center">
          <div class="user-img h-10 w-10 border rounded-full overflow-hidden mr-4">
            <img alt="nike's profile picture" class="_6q-tv" data-testid="user-avatar" draggable="false" src="https://scontent-nrt1-1.cdninstagram.com/v/t51.2885-19/s150x150/20635165_1942203892713915_5464937638928580608_a.jpg?_nc_ht=scontent-nrt1-1.cdninstagram.com&_nc_ohc=JK-0WwYKXBgAX-mFP6I&oh=e0d86b1c4be3cea94e341f18e17905b3&oe=5F94C764">
          </div>
          <div class="user-name-and-place flex flex-col">
            <span class="text-sm font-bold"><%=post.profile.user_name %></span>
            <span class="text-xs font-light text-gray-900">Bogota, Colombia</span>
          </div>
        </div>
        <div class="right">
          <svg aria-label="More options" class="_8-yf5 " fill="#262626" height="16" viewBox="0 0 48 48" width="16">
            <circle clip-rule="evenodd" cx="8" cy="24" fill-rule="evenodd" r="4.5"></circle>
            <circle clip-rule="evenodd" cx="24" cy="24" fill-rule="evenodd" r="4.5"></circle>
            <circle clip-rule="evenodd" cx="40" cy="24" fill-rule="evenodd" r="4.5"></circle>
          </svg>
        </div>
      </div>
      <div class="feed-img">
        <%= image_tag post.avatar, width: "610px"  %>
      </div>
      <div  class="card-footer p-4" >
        <div class="top" >
          <div class="icons flex flex-row justify-between items-center">
            <div class="left flex flex-row">

              <div class="like mr-4">
                <%if post.like?(current_user.id) %>
                  <a href="#"
                     data-reflex="click->Likes#decrement_like"
                     data-step=<%="#{post.id},#{current_user.id}"%>
                  >
                    <i class="fa-solid fa-heart"></i>
                  </a>
                <% else %>
                  <a href="#"
                     data-reflex="click->Likes#increment_like"
                     data-step=<%="#{post.id},#{current_user.id}"%>
                  >
                    <i class="fa-regular fa-heart"></i>
                  </a>
                <% end %>
              </div>
              <div class="comment mr-4">
                <svg aria-label="Comment" class="_8-yf5 " fill="#262626" height="24" viewBox="0 0 48 48" width="24">
                  <path clip-rule="evenodd" d="M47.5 46.1l-2.8-11c1.8-3.3 2.8-7.1 2.8-11.1C47.5 11 37 .5 24 .5S.5 11 .5 24 11 47.5 24 47.5c4 0 7.8-1 11.1-2.8l11 2.8c.8.2 1.6-.6 1.4-1.4zm-3-22.1c0 4-1 7-2.6 10-.2.4-.3.9-.2 1.4l2.1 8.4-8.3-2.1c-.5-.1-1-.1-1.4.2-1.8 1-5.2 2.6-10 2.6-11.4 0-20.6-9.2-20.6-20.5S12.7 3.5 24 3.5 44.5 12.7 44.5 24z" fill-rule="evenodd"></path>
                </svg>
              </div>
              <div class="share">
                <svg aria-label="Share Post" class="_8-yf5 " fill="#262626" height="24" viewBox="0 0 48 48" width="24">
                  <path d="M47.8 3.8c-.3-.5-.8-.8-1.3-.8h-45C.9 3.1.3 3.5.1 4S0 5.2.4 5.7l15.9 15.6 5.5 22.6c.1.6.6 1 1.2 1.1h.2c.5 0 1-.3 1.3-.7l23.2-39c.4-.4.4-1 .1-1.5zM5.2 6.1h35.5L18 18.7 5.2 6.1zm18.7 33.6l-4.4-18.4L42.4 8.6 23.9 39.7z"></path>
                </svg>
              </div>
            </div>
            <div class="right">
              <div class="save">
                <svg aria-label="Save" class="_8-yf5 " fill="#262626" height="24" viewBox="0 0 48 48" width="24">
                  <path d="M43.5 48c-.4 0-.8-.2-1.1-.4L24 29 5.6 47.6c-.4.4-1.1.6-1.6.3-.6-.2-1-.8-1-1.4v-45C3 .7 3.7 0 4.5 0h39c.8 0 1.5.7 1.5 1.5v45c0 .6-.4 1.2-.9 1.4-.2.1-.4.1-.6.1zM24 26c.8 0 1.6.3 2.2.9l15.8 16V3H6v39.9l15.8-16c.6-.6 1.4-.9 2.2-.9z"></path>
                </svg>
              </div>
            </div>
          </div>
          <div class="likes mt-1">
                      <span class="font-bold text-sm">
                        <%=post.likes.count %> Me gusta
                      </span>
          </div>
          <div class="caption text-sm mt-2">
            <b><%=post.profile.user_name %></b>
            <%=post.description %>
          </div>
          <div class="mt-3" style="color: #8e8e8e;">
            <span> <%=post.comments.count %></span> comentarios
          </div>

          <% Comment.where(post: post).each do |comment| %>
          <div class="caption text-sm">
            <b><%=comment.profile.user_name%></b>
            <%=comment.text %>

            <%if current_user.id == comment.profile.user.id %>
              <a href="#"
                 data-reflex="click->Comments#delete"
                 data-step=<%= comment.id%>
              >
                <i class="fa-regular fa-trash-can"></i>
              </a>
            <% end %>
          </div>
          <% end %>


          <div class="post-date mt-1">
                      <span class="text-xs text-gray-900">
                        <%=post.created_at %>
                      </span>
          </div>
        </div>
        <div class="bottom border-t pt-3 mt-3">
          <%= form_tag   do %>
            <div class="wrapper flex">
              <div>
                <%=  hidden_field(:pts, :pts_id, :value => post.id)  %>
              </div>
              <div>
                <%=  hidden_field(:user, :user_id, :value => current_user.id)  %>
              </div>
              <div comentario>
                <%= text_field_tag :text, nil, placeholder: "Agregar un comentario...", class: "text-sm h-10 w-full outline-none focus:outline-none w-10/12" %>
              </div>
              <%= link_to "Publicar", "#", data: { reflex: "click->CommentsReflex#submit" }, class: "text-blue-500 opacity-75 w-2/12 text-right font-bold" %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>