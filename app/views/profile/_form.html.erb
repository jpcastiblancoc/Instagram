<h1 class="bg-no-repeat ">
  <% if profile.avatar.attached? %>
    <%= image_tag profile.avatar, width: "100px" %>
  <%end %>
</h1>
<div class="mt-8 w-64 flex flex-col">
<%= form_with(model: profile) do |form| %>

    <% if profile.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

        <ul>
          <% profile.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <h1 class="text-xs w-full mb-2 rounded border bg-gray-100 border-gray-300 px-2 py-2
    focus:outline-none focus:border-gray-400 active:outline-none text-center"><%=profile.user_name %></h1>
    <div >
      <%= form.file_field :avatar,
          class: "text-xs w-full mb-4 rounded border bg-gray-120 border-gray-300 px-2 py-2 focus:outline-none focus:border-gray-400 active:outline-none text-center"%>
    </div>

    <div>
      <%= form.text_field :name, placeholder: "Nombre completo",
                          class:"text-xs w-full mb-2 rounded border bg-gray-120 border-gray-300 px-2 py-2 focus:outline-none focus:border-gray-400 active:outline-none text-center" %>
    </div>

    <div >
      <%= form.text_field :user_name, placeholder: "Nombre usuario",
                          class: "text-xs w-full mb-4 rounded border bg-gray-120 border-gray-300 px-2 py-2 focus:outline-none focus:border-gray-400 active:outline-none text-center" %>
    </div>

    <div >
      <%= form.date_field :date_birth, placeholder: "Fecha de nacimiento",
    class: "text-xs w-full mb-4 rounded border bg-gray-120 border-gray-300 px-2 py-2 focus:outline-none focus:border-gray-400 active:outline-none text-center" %>
    </div>
    <div class=" text-sm text-center bg-blue-300 text-white py-1 rounded font-medium">
      <%= form.submit "Enviar" %>
    </div>

<% end %>
</div>
